do_extract() {
    ar x ${XBPS_SRCDISTDIR}/${pkgname}-${version}/vesktop_${version}_amd64.deb
    tar xf data.tar.xz -C ${wrksrc}
}

do_install() {
    vmkdir /usr/share
    vmkdir /opt/Vesktop

    # Copy the files and directories
    vcopy usr/share/* /usr/share/
    vcopy opt/Vesktop/* /opt/Vesktop/
